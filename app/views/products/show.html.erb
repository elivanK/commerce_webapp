<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <br>
      <%= image_tag @product.image_url ,class: "img-fluid" %> 
      
      <p>
        <strong>color:</strong>
        <%= @product.color %>
      </p>

      <p>
        <strong>price:</strong>
        <%= @product.price %>
      </p> 
      <p> 
        <strong>Comment highest:</strong>  
        <%= @product.highest_rating_comment.try(:rating) %>
        <%= @product.highest_rating_comment.try(:body) %>
      </p>
      <p>
        <strong>Comment lowest:</strong>
        <%= @product.lowest_rating_comment.try(:rating) %>
        <%= @product.lowest_rating_comment.try(:body) %>
      <p>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
  </div>
</div>
