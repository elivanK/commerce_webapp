<div class="container-fluid">
    <h1 class=mt-5>Welcome to Bike Berlin</h1>
    <p class="lead">Your source for used bikes in Berlin</p>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <% @products.each_with_index do |product, i| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<% i %>" class="<% i== 0 ? "active" : "" %>"></li>
            <% end %>
        </ol>
    <!-- wrapper for slides -->
        <div class="carousel-inner">
            <% @products.each do |product| %>
            <div class="carousel-item<%= " active" if product == @products.first %>">
                <%= image_tag(product.image_url, class: "img-fluid") %>
                <!-- with captions -->
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="title"><%= product.name %></h1>
                </div>
            </div>
            <% end %>
         </div>
        <!-- controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div><!-- end of carousel-example-generic -->
</div><!-- end of container-fluid -->
